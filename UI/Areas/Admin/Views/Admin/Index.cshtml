@model UI.Models.ProductListViewModel

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürün Listesi</h2>
<a class="btn btn-sm btn-success" asp-controller="Admin" asp-action="Add">Ürün Ekle</a>

    <table class="table table-responsive-xl">
        <tr>
            <th>Ürün Adı</th>
            <th>Ürün Fiyatı</th>
            <th>Stok Adedi</th>
            <th></th>
            <th></th>

        </tr>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
                <td><a class="btn btn-sm btn-info" asp-controller="Admin" asp-action="Update" asp-route-productId="@product.ProductId">Güncelle</a></td>
                <td><a class="btn btn-sm btn-danger" asp-controller="Admin" asp-action="Delete" asp-route-productId="@product.ProductId">Sil</a></td>
            </tr>

        }
    </table>


