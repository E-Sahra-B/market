@using UI.Models
@model ProductListViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <table class="table table-responsive-xl">
            <tr>
                <th>Ürün Adı</th>
                <th>Ürün Fiyatı</th>
                <th>Stok Adedi</th>
                <th></th>

            </tr>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.UnitPrice</td>
                    <td>@product.UnitsInStock</td>
                    <td><a class="btn btn-sm btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Sepete Ekle</a></td>
                </tr>

            }
        </table>

<product-list-pager current-category="@Model.CurrentCategory" 
                    current-page="@Model.CurrentPage" 
                    page-count="@Model.PageCount" 
                    page-size="@Model.PageSize"></product-list-pager>

