@model UI.Models.CartSummaryViewModel

<ul class="dropdown-menu-right">

    @foreach (var item in Model.Cart.CartLines)
    {
        <li>
            <a href="#">@item.Product.ProductName <span class="badge">@item.Quantity</span></a>
        </li>
    }
    <li role="separator" class="dropdown-divider"></li>
    <li>
        <a href=""><span class="glyphicon glyphicon-align-left glyphicon-shopping-cart" aria-hidden="true"></span>@Model.Cart.Total</a>
    </li>
    <li role="separator" class="dropdown-divider"></li>
    <li><a  asp-controller="Cart" asp-action="List">Sepet Detayı</a></li>

</ul>


  